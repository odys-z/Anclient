<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".album.client.SettingsActivity">

    <LinearLayout
        android:id="@+id/id_login_cate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="@string/txt_prefs_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_marginVertical="8dp"
            android:hint="Deprecated"
            android:defaultValue="home"
            android:enabled="false"
            android:key="@string/key_home"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_marginTop="8dp"
            android:hint="@string/devide_title"
            android:enabled="true"
            android:background="@null"
            android:key="@string/key_device" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="none"
            android:focusable="false"
            android:text="@string/msg_only_once" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>